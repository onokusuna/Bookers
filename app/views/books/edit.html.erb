<!-- 以下、編集画面部分 -->
<h2>
	<strong>Editing book</strong><!-- cssで太文字にする -->
</h2>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %> <!-- 最後にエンド -->

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<p><%= f.submit 'Update Book' %></p> <!-- .erb submit=提示する -->

<% end %>

<!-- Editリンク -->
<p>
	<%= link_to "Show", book_path(@book)%><!-- ここのパスは@必要 -->
	｜
<!-- Backリンク -->
	<%= link_to "Back", books_path%>
</p>